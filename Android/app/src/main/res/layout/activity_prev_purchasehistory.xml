<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/mainBackground"
  tools:context=".CustomerView_ViewPrevPurchasesActivity">

  <LinearLayout
    android:layout_width="350dp"
    android:layout_height="match_parent"
    android:layout_above="@+id/exitButton"
    android:layout_centerHorizontal="true"
    android:orientation="vertical">

    <TextView
      android:id="@+id/tvPurchaseHistory"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fontFamily="sans-serif-thin"
      android:paddingBottom="20dp"
      android:text="@string/prevPurchases"
      android:textAlignment="center"
      android:textAppearance="@style/TextAppearance.AppCompat.Large"
      android:textColor="@color/titleFont"
      android:textSize="40sp" />

    <TextView
      android:id="@+id/tvPrintPurchases"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:fontFamily="sans-serif-thin"
      android:paddingBottom="20dp"
      android:scrollbars="vertical"
      android:text="@string/active"
      android:textAppearance="@style/TextAppearance.AppCompat.Large"
      android:textColor="@color/titleFont"
      android:textSize="15sp" />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/exitButton"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_gravity="bottom"
    android:orientation="vertical">
    <Button
      android:id="@+id/bExitPurchaseHistory"
      style="@style/ViewButton"
      android:layout_marginTop="20dp"
      android:layout_marginBottom="20dp"
      android:text="@string/exitButtons" />
  </LinearLayout>

</RelativeLayout>
